{
  "name": "storm-data-collector",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "homepage": "https://github.com/couchcryptid/storm-data-collector#readme",
  "bugs": {
    "url": "https://github.com/couchcryptid/storm-data-collector/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/couchcryptid/storm-data-collector.git"
  },
  "license": "ISC",
  "author": "couchcryptid",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch --env-file=.env ./src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run src/kafka/kafka.integration.test.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:unit": "vitest run --coverage --exclude '**/*.integration.test.ts'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testcontainers/kafka": "^11.11.0",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@confluentinc/kafka-javascript": "^1.8.0",
    "croner": "^10.0.1",
    "csv-parser": "^3.2.0",
    "pino": "^10.3.0",
    "prom-client": "^15.1.3",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
